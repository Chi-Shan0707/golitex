    know:
        forall :
            forall x A:
                $p(x)
            then:
                $ForallXInAPX()

        forall y A:
            $p(y)    
        
    $ForallXInAPX()

# self-referencing
prove:
    know:
        forall x A:
            $q(x)
            then:
                $q(x)
    $q(1)

# 2 facts referencing each other
prove:
    know:
        forall x A:
            $p(x)
            then:
                $q(x)
        forall y A:
            $q(y)
            then:
                $p(y)
    $q(1)

# 3 facts referencing each other
