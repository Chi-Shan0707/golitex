fn seq_sum(a seq(R), n N) R:
    seq_sum(a, n+1) = seq_sum(a, n) + a(n+1)
    seq_sum(a, 0) = a(0)

fn seq_product(a seq(R), n N) R:
    seq_product(a, n+1) = seq_product(a, n) * a(n+1)
    seq_product(a, 0) = a(0)

forall a seq(R), n N:
    seq_sum(a, n) = seq_sum(a, n-1) + a(n)
    seq_product(a, n) = seq_product(a, n-1) * a(n)