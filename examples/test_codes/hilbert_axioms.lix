set point
set line
set plane

fn angle(a point, b point, c point) real

prop point_on_line(p point, l line)
prop point_on_plane(q point, p plane)

# Axioms of "existence and uniqueness" are represented using fn & know forall statements
# Put definition in wiki pedia beside to show simplicity and directness of litex
fn line_of(a point, b point) line:
    a != b
    then:
        $point_on_line(line_of(a, b), a)
        $point_on_line(line_of(a, b), b)
        forall l line:
            $point_on_line(a, l)
            $point_on_line(b, l)
            then:
                l = line_of(a, b)

exist_prop c point st a_line_has_more_than_two_points(l line, a point, b point):
    $point_on_line(a, l)
    $point_on_line(b, l)
    a != b
    iff:
        $point_on_line(c, l)
        c != a
        c != b

know forall l line, a point, b point:
    $point_on_line(a, l)
    $point_on_line(b, l)
    a != b
    then:
        $a_line_has_more_than_two_points(l, a, b)

