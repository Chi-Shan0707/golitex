# - as prefix opt
prove:
    -1 = -1
    -1 = 1 -2
    -1 = 2 -3
    -1 = 3 -4
    -1 = 4 -5

# +-*/
prove:
    -1 + 1 = 0
    - 0 =0
    2 - -1 = 3
    -2 * 4 = -16 /2 
    (-2) * 3 = -6
    (-3)^2 = 9

# < <= > >=
prove:
    1 < 2
    -2 <= 3
    -9 <= -9
    -2 < -1

# match
prove:
    know forall x R, y R, z R: # 分配率
        x * (y + z) = x * y + x * z
        (x + y) * z = x * z + y * z
    -4 * a + 5 * a = (-4+5) * a # match -4 with x, 5 with y, a with z
    -4 * a + 5 * a = 1 * a # 1 match -4+5

# user input number literal expression can match known literal expression
# e.g. 3*3 can match 8+1
prove:
    know forall x R:
        $p(x + 3*3)
    $p(x + (8+1))